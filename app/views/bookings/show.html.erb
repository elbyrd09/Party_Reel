<div class="wrapper">
  <img src=" <%= asset_path(@booking.event.local_img) %>" alt="event picture" style="width: 100%; height: 25vh; object-fit: cover;">
    <%= render 'shared/progress_bar' %>
    <div class="event-show-card mt-4 d-flex justify-content-between flex-wrap m-2">
      <div class="row d-flex justify-content-center m-3 p-3">
        <div class="d-flex justify-content-center flex-column">
          <h5 class="w-100 text-center" style="color: white; background-color: #0fabbc; border-radius: 30px;font-size: 20px;padding: 10px;">My Photographer</h5>
          <div class="d-flex justify-content-between">
            <p class="mb-0 pl-3" style="color: grey"><strong><%= @booking.photographer.user.first_name %></strong> will join you for the Arianna Grande set at 12:00 today!</p>
            <img src="<%= asset_path("profile_img.jpg") %>" class="float-right card-trip-user avatar-bordered" style="shape-outside: circle()," />
          </div>
        </div>
        <div>
         </div>
      </div>

    <div class="row d-flex justify-content-center m-3 p-3" style="border-top: solid;">
      <h5 class="w-100 text-center" style="color: white; background-color: #0fabbc; border-radius: 30px;font-size: 20px;padding: 10px;">My Package</h5><br>
        <p style="color: grey"><%= @booking.package.name %> on <%= @booking.event.start_date.strftime("%b %d") %> <br>from <%= @booking.start_time.strftime("%k:%M") %> - <%= @booking.end_time.strftime("%k:%M") %> </p><br>
        <small><p style=" color: grey"><strong>Dedicated attention for 1 hour</strong></p></small>
        <small><p style=" color: grey">Minimum: 50 photographs of your group</p></small>
    <div class="mt-4 d-flex justify-content-center" style="border-top: solid">
        <p style="color: grey"><strong>Total price</p></strong>
        <h4 style="color: #fa163f; padding: 12px; margin-left: 90px;"><%= humanized_money_with_symbol(@booking.package.price) %></h4>
    </div>
    <div class="row d-flex justify-content-between m-3 p-3" style="border-left-style: solid; border-top: solid;">
      <h5 style="color: #fa163f">My Package</h5><br>
        <p><%= @booking.package.name %> on <%= @booking.event.start_date.strftime("%m/%d/%Y") %> <br>from <%= @booking.start_time.strftime("%k:%M") %> - <%= @booking.end_time.strftime("%k:%M") %> </p><br>
        <small><p style="line-height: 2px; color: grey">Dedicated attention for 1 hour</p></small>
        <small><p style="line-height: 2px; color: grey">Minimum: 50 photographs of your group</p></small>
    <div class="mt-4 py-4 d-flex justify-content-around" style="border-top: solid">
        <p><strong>Total price</p></strong>
        <h4 style="color: #fa163f"><%= humanized_money_with_symbol(@booking.package.price) %></h4>
    </div>
        <a href="<%= @booking.id %>/payments/new" class="btn btn-primary-pay">Pay now</a>
  </div>
        <%= render 'shared/bottom_nav'%>
  </div>
  </div>
</div>





