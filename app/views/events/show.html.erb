
<div class="wrapper p-3" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(<%= cl_image_path @event.local_img %>); background-size: cover;">
  <div class="container text-center">
    <div class="event-show-card" >
      <h5>Book your Photographer for </h5>
      <h4> <%= @event.name %>! </h4>
      <p>Dates: <%= @event.start_date %> <%= @event.end_date %> </p>
      <p class="coloured"> Photographers available: <%= @event.availablephotographers.count %></p>
      <p> <%= @event.event_description.split(/\./).first %></p>
    </div>
    <a href="<%= @event.id %>/packages" class="btn btn-gradient w-100">Book!</a>
  </div>
  <%= render 'shared/bottom_nav'%>
</div>

