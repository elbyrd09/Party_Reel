<div class="wrapper">

<img src=" <%= asset_path(@event.local_img) %>" alt="event picture" style="width: 100%; height: 25vh; object-fit: cover;">
  <%= render 'shared/progress_bar' %>
    <div class="container text-center">
      <div class="event-show-card mt-4" >
        <h5 style="color: black;">Book your photographer for </h5>
        <p style="background-color: #0fabbc; padding: 8px; width: 50%; border-radius: 30px; color: white; display: inline-grid;"> <%= @event.name %></p>
        <p style="color: black;">Date of Festival: <%= @event.start_date.strftime("%B %d") %> </p>
        <p style="background-color: #0fabbc; border-radius: 30px; color: white; padding: 10px; display: inline-grid; width: 50%;"> Photographers: <%= @photographers_present.count %></p>
        <p style="color: black;"> <%= @event.event_description.split(/\./).first %></p>
      <%= link_to "Next step: Package", event_packages_path(@event), class: "btn-new" %>
      </div>
    </div>
    <%= render 'shared/bottom_nav'%>

</div>
<%#= javascript_pack_tag 'progress_bar' %>
