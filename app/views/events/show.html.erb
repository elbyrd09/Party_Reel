<div class="wrapper">

<img src=" <%= asset_path(@event.local_img) %>" alt="event picture" style="width: 100%; height: 25vh; object-fit: cover;">
  <div class="container text-center">
    <div class="event-show-card mt-4" >
      <h5 style="color: black;">Book your photographer for </h5>
      <p style="background-color: #0fabbc; padding: 8px; border-radius: 30px; color: white;"> <%= @event.name %></p>
      <p style="color: black;">Date of Festival: <%= @event.start_date.strftime("%B %d") %> </p>
      <p style="background-color: #0fabbc; border-radius: 30px; color: white; padding: 10px;"> Photographers available: <%= @event.availablephotographers.count %></p>
      <p style="color: black;"> <%= @event.event_description.split(/\./).first %></p>
    </div>
    <a href="<%= @event.id %>/packages" class="btn-new" style="padding: 10px; border-radius: 30px; color: white; width: 100px;">Book!</a>
  </div>
  <%= render 'shared/bottom_nav'%>

</div>

