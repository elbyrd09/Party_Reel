<div class="wrapper container-fluid">
  <div class="row">
    <div class="col-lg-8 col-md-12 mx-auto fullform-container">
      <div class="row">
      <div class="form col-lg-4 col-md-12">
        <h2>Log in</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn-gradient w-100"  %>
              </div>
            <% end %>
                <div class="btns_signup_forgetpass_login">
                  <%= render "devise/shared/links" %>
                </div>
          </div>
            <div class="side_img col-lg-8 col-md-12 px-0">
            <%= image_tag "lg1.jpg", alt: "alttext", class: "img-fluid" %>
          </div>
        </div>
    </div>
  </div>
</div>

<%= stylesheet_link_tag '_devise_user' %>
