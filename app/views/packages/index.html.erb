<div class="wrapper-booking"></div>
  <div class="container">
  <h2>Select your Package</h2>
    <div class="package-cards">
      <% @packages.each do |package| %>
        <a href="packages/<%= package.id %>">
          <div class="package-card" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url(<%= asset_path package.local_img %>)">
            <div class="package_name"> <%= package.name %></div>
            <div class="package_info">
              <h3><%= package.name %></h3>
              <p><%= humanized_money_with_symbol(package.price) %></p>
              <p><%= package.description %></p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>


