<div class="container">
  <div class="row">
    <div class="attendee-mod mt-3 col-9">
        <div class="attendee-mod-infos">
          <div class="row">
              <div class="col-md-6">
                <p> <%= current_user.first_name %> </p>
                <p> <%= current_user.last_name %> </p>
                <p> <%= current_user.location %> </p>
                <p> <%= current_user.user_ig_handle %> </p>
              </div>
          </div>
          <div class="attendee-add-infos col-md-6">
            <%= simple_form_for(@attendee) do |f| %>
              <p><%=   f.collection_radio_buttons :influencer, [[true, 'I will only use for personal use'], [false, 'I plan to profit of of the photos (Influencer, model, etc.)']], :first, :last  %></p>
              <p><%= f.input :interaction, as: :radio_buttons, collection: Attendee::INTERACTIONS %></p>
              <p><%= f.association :attendeeshotpreferences, as: :check_boxes, collection: Shotpreference.all, input_html: { checked: true } %></p>
              <%= f.submit class: "btn btn-primary" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
