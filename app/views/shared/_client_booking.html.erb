
<div class="event-show-card mt-4" >
  <div class="d-flex" style="justify-content: space-between;">
    <h2 style="color: grey"><strong><%= booking.attendee.user.first_name %> <%= booking.attendee.user.last_name %></strong></h2>
    <h2  style="border-top: solid"></h2>
    <!-- attendee profile picture -->
    <% if booking.attendee.user.avatar.attached? %>
      <%= cl_image_tag booking.attendee.user.avatar.key, class: "pgr-avatar-user avatar-bordered" %>
    <% else %>
      <%= image_tag "https://via.placeholder.com/30X30/0000FF/808080", class: "pgr-avatar-user avatar-bordered" %>
    <% end %>
  </div>
  <h2 style="color: grey"><%= booking.event.name %></h2>
  <p style="color: grey"><strong><%= booking.event.start_date %></strong></p>
  <h2  style="border-top: solid"></h2>
  <h5 style="color: grey"><strong>Package Selected:</strong></h5>
  <h2  style="border-top: solid"></h2>
  <h5 style="color: grey"><%= booking.package.name %></h5>
  <h2  style="border-top: solid"></h2>
  <h5 class="event-infos-pricing" style="color: grey"><strong>Payment Status:</strong> Paid in full</h5>
  <h2  style="border-bottom: #0fabbc solid;"></h2>
</div>
