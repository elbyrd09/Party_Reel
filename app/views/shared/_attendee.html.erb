<h2 class="p-4 text-center" style="color: rgb(71,172,188);"><%= current_user.first_name %>'s Dashboard</h2>
  <div class="container col-12 col-lg-6 col-md-10">
    <div class="vertical-tabs">
      <ul class="nav nav-tabs d-flex justify-content-center" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" style="color: rgb(71,172,188)" data-toggle="tab" href="#pag1" role="tab" aria-controls="Events I've Booked<">Events I've Booked</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" style="color: rgb(71,172,188)" data-toggle="tab" href="#pag2" role="tab" aria-controls="My Photos">My Photos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" style="color: rgb(71,172,188)" data-toggle="tab" href="#pag3" role="tab" aria-controls="Payment Details">Payment Details</a>
        </li>
     <!--    <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#pag4" role="tab" aria-controls="Messages">Messages</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#pag5" role="tab" aria-controls="Reviews">Reviews</a>
        </li> -->
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="pag1" role="tabpanel">
          <div class="sv-tab-panel py-4">
            <h3 style="text-align: center; font-size: 30px;">My Events</h3>
              <ul style="padding: 10px;">
                <% @bookings.each do |booking| %>
                  <%= render 'shared/attendee_bookings', booking: booking %>
                <% end %>
              </ul>
          </div>
        </div>


        <div class="tab-pane" id="pag2" role="tabpanel">
          <div class="sv-tab-panel">
            <div class="title">
              <h3>My Photos</h3>


              <div class="dropdown">
                <button class="dropbtn">Filter by event</button>
                 <div class="dropdown-content">
                    <a href="#">Coachella</a>
                    <a href="#">EDC Vegas</a>
                    <a href="#">Firefly</a>
                  </div>
              </div>
              </div>
            <div class=“container”>
            <%= render 'shared/attendee_photos' %>
            </div>
          </div>
        </div>


        <div class="tab-pane" id="pag3" role="tabpanel">
          <div class="sv-tab-panel">
            <h3>My Payment Details</h3>

            <div class=payment_top_card>
              <h2>NNN</h2>


            </div>
          </div>
        </div>

        <div class="tab-pane" id="pag4" role="tabpanel">
          <div class="sv-tab-panel">
           <h3>Messages</h3>

          </div>
      </div>
        <div class="tab-pane" id="pag5" role="tabpanel">
          <div class="sv-tab-panel">
           <h3>Reviews</h3>
          </div>
        </div>
    </div>
  </div>
 </div>
