<div class="wrapper">
    <img src=" <%= asset_path(@booking.event.local_img) %>" alt="event picture" style="width: 100%; height: 25vh; object-fit: cover;">
       <%= render 'shared/progress_bar' %>
          <div class="event-show-card d-flex justify-content-center flex-row flex-wrap ml-2">
             <!-- <div class="col-md-3"><%#= image_tag @order.teddy.photo_url, width: '100%' %></div> -->
            <div>
              <h5 style="color: grey">Session for <%= current_user.attendee %></h5><br><br>
              <div class="d-flex">
              <img src=" <%= asset_path(@booking.package.local_img) %>" alt="package picture" style="height: 100px; width: 100px; object-fit: cover; border-radius: 5px;">
                <div class="p-3">
                  <small style="color: grey">Package : <strong><%= @booking.package.name %></strong></small><br>
                  <small style="color: grey">Day: <strong><%= @booking.start_time.strftime("%B %d") %></strong></small>
                </div>
              </div>

    <div class="row py-5">
        <div class="col-6">
          <h5 style="color: grey">Subtotal</h5>
          <h5 style="color: grey">Tax</h5><br>
          <h5 style="color: black">Total</h5>
        </div>
        <div class="col-6" style="text-align: right;">
          <h5 style="color: grey">$0.00</h5>
          <h5 style="color: grey">$0.00</h5><br>
          <h5 style="color: black"><strong><%= humanized_money_with_symbol @booking.amount %>.00</strong></h5>
      </div>
    </div>
        <button id="pay" class="btn-new">Party time - Pay now!</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
          const paymentButton = document.getElementById('pay');
          paymentButton.addEventListener('click', () => {
            const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
            stripe.redirectToCheckout({
              sessionId: '<%= @booking.checkout_session_id %>'
            });
          });
        </script>
      </div>
  </div>
</div>

